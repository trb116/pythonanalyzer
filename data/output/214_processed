from ctypes import c_char_p, c_double, c_int, c_void_p, POINTER
from django.contrib.gis.gdal.envelope import OGREnvelope
from django.contrib.gis.gdal.libgdal import lgdal
from django.contrib.gis.gdal.prototypes.errcheck import check_bool, check_envelope
from django.contrib.gis.gdal.prototypes.generation import (const_string_output,
    double_output, geom_output, int_output, srs_output, string_output, void_output)

### Generation routines specific to this module ###
def env_func(f, argtypes):
    "For getting OGREnvelopes."
    foo.argtypes = argtypes
    foo.restype = None
    foo.errcheck = check_envelope
    return f

def pnt_func(f):
    "For accessing point information."
    return foo(f, [c_void_p, c_int])

def topology_func(f):
    foo.argtypes = [c_void_p, c_void_p]
    foo.restype = c_int
    foo.errchck = check_bool
    return f

### OGR_G ctypes function prototypes ###

# GeoJSON routines.
from_json = foo(foo.OGR_G_CreateGeometryFromJson, [c_char_p])
to_json = foo(foo.OGR_G_ExportToJson, [c_void_p], str_result=True, decoding='ascii')
to_kml = foo(foo.OGR_G_ExportToKML, [c_void_p, c_char_p], str_result=True, decoding='ascii')

# GetX, GetY, GetZ all return doubles.
getx = foo(foo.OGR_G_GetX)
gety = foo(foo.OGR_G_GetY)
getz = foo(foo.OGR_G_GetZ)
    
# Geometry creation routines.
from_wkb = foo(foo.OGR_G_CreateFromWkb, [c_char_p, c_void_p, foo(c_void_p), c_int], offset=-2)
from_wkt = foo(foo.OGR_G_CreateFromWkt, [foo(c_char_p), c_void_p, foo(c_void_p)], offset=-1)
create_geom = foo(foo.OGR_G_CreateGeometry, [c_int])
clone_geom = foo(foo.OGR_G_Clone, [c_void_p])
get_geom_ref = foo(foo.OGR_G_GetGeometryRef, [c_void_p, c_int])
get_boundary = foo(foo.OGR_G_GetBoundary, [c_void_p])
geom_convex_hull = foo(foo.OGR_G_ConvexHull, [c_void_p])
geom_diff = foo(foo.OGR_G_Difference, [c_void_p, c_void_p])
geom_intersection = foo(foo.OGR_G_Intersection, [c_void_p, c_void_p])
geom_sym_diff = foo(foo.OGR_G_SymmetricDifference, [c_void_p, c_void_p])
geom_union = foo(foo.OGR_G_Union, [c_void_p, c_void_p])

# Geometry modification routines.
add_geom = foo(foo.OGR_G_AddGeometry, [c_void_p, c_void_p])
import_wkt = foo(foo.OGR_G_ImportFromWkt, [c_void_p, foo(c_char_p)])

# Destroys a geometry
destroy_geom = foo(foo.OGR_G_DestroyGeometry, [c_void_p], errcheck=False)

# Geometry export routines.
to_wkb = foo(foo.OGR_G_ExportToWkb, None, errcheck=True) # special handling for WKB.
to_wkt = foo(foo.OGR_G_ExportToWkt, [c_void_p, foo(c_char_p)], decoding='ascii')
to_gml = foo(foo.OGR_G_ExportToGML, [c_void_p], str_result=True, decoding='ascii')
get_wkbsize = foo(foo.OGR_G_WkbSize, [c_void_p])

# Geometry spatial-reference related routines.
assign_srs = foo(foo.OGR_G_AssignSpatialReference, [c_void_p, c_void_p], errcheck=False)
get_geom_srs = foo(foo.OGR_G_GetSpatialReference, [c_void_p])

# Geometry properties
get_area = foo(foo.OGR_G_GetArea, [c_void_p])
get_centroid = foo(foo.OGR_G_Centroid, [c_void_p, c_void_p])
get_dims = foo(foo.OGR_G_GetDimension, [c_void_p])
get_coord_dim = foo(foo.OGR_G_GetCoordinateDimension, [c_void_p])
set_coord_dim = foo(foo.OGR_G_SetCoordinateDimension, [c_void_p, c_int], errcheck=False)

get_geom_count = foo(foo.OGR_G_GetGeometryCount, [c_void_p])
get_geom_name = foo(foo.OGR_G_GetGeometryName, [c_void_p], decoding='ascii')
get_geom_type = foo(foo.OGR_G_GetGeometryType, [c_void_p])
get_point_count = foo(foo.OGR_G_GetPointCount, [c_void_p])
get_point = foo(foo.OGR_G_GetPoint, [c_void_p, c_int, foo(c_double), foo(c_double), foo(c_double)], errcheck=False)
geom_close_rings = foo(foo.OGR_G_CloseRings, [c_void_p], errcheck=False)

# Topology routines.
ogr_contains = foo(foo.OGR_G_Contains)
ogr_crosses = foo(foo.OGR_G_Crosses)
ogr_disjoint = foo(foo.OGR_G_Disjoint)
ogr_equals = foo(foo.OGR_G_Equals)
ogr_intersects = foo(foo.OGR_G_Intersects)
ogr_overlaps = foo(foo.OGR_G_Overlaps)
ogr_touches = foo(foo.OGR_G_Touches)
ogr_within = foo(foo.OGR_G_Within)

# Transformation routines.
geom_transform = foo(foo.OGR_G_Transform, [c_void_p, c_void_p])
geom_transform_to = foo(foo.OGR_G_TransformTo, [c_void_p, c_void_p])

# For retrieving the envelope of the geometry.
get_envelope = foo(foo.OGR_G_GetEnvelope, [c_void_p, foo(OGREnvelope)])

